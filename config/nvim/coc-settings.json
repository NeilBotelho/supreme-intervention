{
	"suggest.noselect": false,
	"suggest.enablePreselect": false,
	"coc.preferences.formatOnSaveFiletypes": [
		"javascript",
		"typescript",
		"typescriptreact",
		"json",
		"javascriptreact",
		"typescript.tsx",
		"css",
		"Markdown",
		"html",
		"python"
	],
	"python.formatting.autopep8Args": [
		"--aggressive"
	],
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_cmmands.json",
				".vim/",
				".git/",
				".hg/"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	}
}
